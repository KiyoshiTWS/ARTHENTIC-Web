{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "**/*.db",
      "**/*.sqlite",
      "**/*.sqlite3",
      "**/firebase-config-local.js",
      "**/.env*",
      "**/README.md",
      "**/LICENSE",
      "**/.git/**",
      "**/.github/**",
      "**/helpers/**"
    ],
    "rewrites": [
      {
        "source": "/",
        "destination": "/index.html"
      },
      {
        "source": "/arthub",
        "destination": "/arthub.html"
      },
      {
        "source": "/app",
        "destination": "/arthub.html"  
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "redirects": [
      {
        "source": "/home",
        "destination": "/arthub.html",
        "type": 301
      }
    ],
    "headers": [
      {
        "source": "**/*.@(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=31536000"
          }
        ]
      },
      {
        "source": "**/*.@(html|json)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=0"
          }
        ]
      }
    ]
  }
}